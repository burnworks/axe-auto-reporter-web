---
import "../styles/global.css";
import "@fontsource-variable/noto-sans-jp";
import "@fontsource-variable/source-code-pro";
import "@fontsource-variable/roboto";

import Dialog from "../components/Dialog.astro";
import Sidebar from "../components/Sidebar.astro";

interface Props {
	title?: string;
}

const { title } = Astro.props;
const siteTitle: string = "axe Auto Reporter Web";
const siteSubtitle: string = "Automated Accessibility Testing Dashboard";
---

<!doctype html>
<html lang="ja" class="h-full bg-white dark:bg-gray-900">
	<head>
		<meta charset="UTF-8" />
		<title>{title ? `${title} - ${siteTitle}` : `${siteTitle} - ${siteSubtitle}`}</title>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/img/favicon/favicon.ico" />
		<link rel="icon" type="image/png" href="/img/favicon/icon-192x192.png" />
		<link rel="apple-touch-icon" type="image/png" href="/img/favicon/apple-touch-icon-180x180.png" />
	</head>
	<body class="h-full font-body">
		<Dialog />
		<Sidebar />
		<slot />
	</body>
</html>
